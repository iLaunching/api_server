{
  "name": "api-server-2", 
  "build": {
    "dockerfile": "./api-server/Dockerfile"
  },
  "deploy": {
    "restartPolicyType": "always",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30,
    "replicas": 1
  },
  "env": {
    "NODE_ENV": "production",
    "HOST": "0.0.0.0",
    "PORT": "8000", 
    "INSTANCE_ID": "api-2",
    "REDIS_URL": "$REDIS_URL",
    "DATABASE_URL": "$DATABASE_URL",
    "LLM_GATEWAY_URL": "$LLM_GATEWAY_URL",
    "ALLOWED_ORIGINS": "https://aibuildd-v1.bubbleapps.io,https://business-ai-lb.up.railway.app"
  }
}